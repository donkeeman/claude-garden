{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/on-session-start.sh"
      }
    ],
    "PostToolUse": [
      {
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/on-post-tool.sh"
      }
    ],
    "PostToolUseFailure": [
      {
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/on-post-tool-fail.sh"
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/on-stop.sh"
      }
    ]
  }
}
